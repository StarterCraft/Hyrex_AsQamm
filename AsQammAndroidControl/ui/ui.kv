Root:
    scr_mngr: scr_mngr
    server: app.server
    crypto: app.crypto
    
    ScreenManager:
        id: scr_mngr
        login_screen: login_screen
        loading: loading
        setupServer: setupServer

        Screen:
            id: login_screen
            name: 'login_screen'
            username: username
            password: password

            MDCard:
                id: login_card
                size_hint: 0.8, 0.6
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: '25dp'
                    padding: '10dp'

                    MDTextField:
                        id: username
                        hint_text: "Логин"
                        required: True
                        helper_text_mode: "on_error"
                        helper_text: "Введите логин"

                    MDTextField:
                        id: password
                        hint_text: "Пароль"
                        required: True
                        helper_text_mode: "on_error"
                        helper_text: "Введите пароль"
                        password: True

                    MDBoxLayout:
                        orientation: 'vertical'
                        spacing: '25dp'
                        padding: '15dp'

                        MDRaisedButton:
                            id: sign
                            text: "Войти"
                            pos_hint: {'center_x': 0.5}
                            size_hint: None, None
                            size: signin_like_guest.size
                            on_press: root.checkDataLogin()

                        MDRaisedButton:
                            id: signin_like_guest
                            text: "Войти как гость"
                            pos_hint: {'center_x': 0.5}
                            size_hint: None, None
                            size: '100dp', '30dp'

        Screen:
            id: loading
            name: 'loading'
            Image:
                source: 'images/loading.gif'
                anim_delay: 0.025

        Screen:
            id: setupServer
            name: 'setupServer'

            MDCard:
                id: ip_card
                size_hint: 0.8, 0.6
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                orientation: "vertical"
                padding: '10dp'

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint: 1, 0.5

                    MDLabel:
                        text: "Не удалось подключиться к серверу. Попробуйте указать другой адрес сервера."
                        halign: "center"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1

                    MDTextField:
                        id: ip
                        hint_text: "Адрес сервера"
                        required: True
                        helper_text_mode: "on_error"
                        helper_text: "Введите адрес"

                        
                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint: 1, 0.5

                        MDRaisedButton:
                            id: confirm
                            text: "Подтвердить"
                            pos_hint: {'center_x': 0.5}
                            size_hint: None, None
                            size: '100dp', '30dp'
                            on_press: None
            

                            
